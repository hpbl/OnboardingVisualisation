{
  "name": "onboardingvisualization",
  "version": "1.0.0",
  "description": "Tool to visualize stats of open-source repositories",
  "main": "index.js",
  "scripts": {
    "start": "beefy src/* --live",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src --fix",
    "build": "browserify src/* > build/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpbl/OnboardingVisualization.git"
  },
  "keywords": [
    "open-source",
    "onboarding",
    "visualization"
  ],
  "author": "Porteiros",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hpbl/OnboardingVisualization/issues"
  },
  "homepage": "https://hpbl.github.io/OnboardingVisualization/",
  "devDependencies": {
    "beefy": "^2.1.8",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "browserify": "^16.2.3",
    "d3": "^5.7.0"
  }
}
